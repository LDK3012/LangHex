<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Lớp đổ bóng dưới cùng -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#40514646" /> <!-- Màu đen với độ trong suốt -->
            <corners android:radius="10dp" /> <!-- Bo góc giống như phần nền -->
            <padding
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"
                android:bottom="6dp" /> <!-- Đổ bóng chỉ ở dưới -->
        </shape>
    </item>

    <!-- Lớp nền chính có viền -->
    <item android:top="0dp" android:left="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#FF4F52" /> <!-- Nền màu đỏ -->
            <stroke
                android:width="1dp"
                android:color="#C9C9C9" /> <!-- Viền màu xám -->
            <corners android:radius="10dp" /> <!-- Bo tròn viền -->
        </shape>
    </item>
</layer-list>